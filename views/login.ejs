        <form action="/login" method="POST">
            <div class="input-wrapper-grid">
                <div class="grid-inputs">
                    <div class="username-input-holder input_holder">
                    <input type="text" required name="username" class="input-class left" placeholder="Username">
                </div>
                <div class="password-input-holder input_holder">
                    <input type="password" required name="password" class="input-class right" placeholder="Password">
                </div>
                </div>
                <div class="grid-submit">
                <input type="submit" value="LOG IN" class="submit-class">
            </div>
            </div>
        </form>
        <p class="message-temp">
            <%= statuses.jwt %>
        </p>
        <p class="message-temp">
            <%= statuses.login %>
        </p>


        <div class="explanation-wrapper">

 <div class="explanation-div">
  
    <span class="span-how-to">How to use app?</span>
